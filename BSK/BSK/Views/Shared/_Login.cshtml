
<!-- Add User Modal-->
<div class="modal inmodal in" id="UserModalLogin" tabindex="-1" role="dialog" aria-hidden="false" ng-controller="UserController" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <form class="form-horizontal" name="addUser" role="form" ng-submit="LoginUser()" novalidate>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <h3 class="modal-title">User Login</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="" ng-show="ShowError">
                            <ul class="alert alert-danger custom-alert">
                                <li class="error" data-ng-repeat="error in errors">{{error}}</li>
                            </ul>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Email</label>
                            <div class="col-sm-7">
                                <input type="text" placeholder="" class="form-control" ng-model="Email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Password</label>
                            <div class="col-sm-7">
                                <input type="password" placeholder="" class="form-control" ng-model="Password" ng-init="Password=''">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>